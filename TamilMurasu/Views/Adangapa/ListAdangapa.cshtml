<script type="text/javascript">
    $(document).ready(function () {
        var source =
        {
            url: "/Adangapa/MyAdangapagrid",

            data: {

            },
            datatype: "json",
            updaterow: function (rowid, rowdata) {
                // synchronize with the server - send update command
            },
            datafields: [
                { name: 'footnote', type: 'string' },
                { name: 'publishup', type: 'string' },
                { name: 'publishdown', type: 'string' },
                { name: 'head', type: 'string' },
                { name: 'editrow', type: 'string' },
                { name: 'delrow', type: 'string' },


            ],
            id: 'id',
        };
        var dataAdapter = new $.jqx.dataAdapter(source,
            { contentType: 'application/json; charset=utf-8' }, {
            loadComplete: function () {

            }
        }
        );

        $("#grid").jqxGrid(
            {

                width: '100%',
                source: dataAdapter,
                height: 450,
                source: source,
                //autoheight: true,
                sortable: true,
                filterable: true,
                groupable: false,
                pageable: true,
                showfilterbar: true,
                //showfilterrow: true,
                theme: 'classic',
                autorowheight: true,
                filterbarmode: 'simple',
                enablebrowserselection: true,
                columnsresize: true,
                selectionmode: 'multiplerowsextended',
                keyboardnavigation: false,

                columns: [

                    { text: 'Original Head', filtertype: 'checkedlist', datafield: 'footnote', width: 300 },
                    { text: 'Publish Up', filtertype: 'checkedlist', datafield: 'publishup', width: 150 },
                    { text: 'Publish Down', filtertype: 'input', datafield: 'publishdown', width: 150 },
                    { text: 'Comedy Head', filtertype: 'input', datafield: 'head', width: 300 },
                    { text: 'Edit', datafield: 'editrow', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsalign: 'center', width: 70 },
                    { text: 'Delete', datafield: 'delrow', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsalign: 'center', width: 70 },
                ]
            });
        $("#ddlStatus").change(function () {
            var value = "Y";
            if ($(this).val() != "") {
                value = $(this).val();
            }
            source.data = {
                strstatus: value
            };
            $("#grid").jqxGrid({ source: source });
        });
    });

</script>

<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">

                    <form>
                        <div class="row">
                            <div class="col-md-2 ">
                                @Html.DropDownListFor(n => n.ddlStatus, new SelectListItem[]
                                         { new SelectListItem() {Text = "Enabled", Value="Y"},
                                new SelectListItem() {Text = "Disabled", Value="N"}},
                                         new { @id = "ddlStatus", Class = "dropdownlist margin_bottom_new form-control" })
                            </div>
                            <div class="col-md-9 ">
                                <div class=" textalignright">
                                    <a href="@Url.Action("Adangapa","Adangapa")" class="btn btn-danger" style="float: right; color:white;">Add Adangapa Image</a>
                                    <br>
                                </div>

                            </div>
                        </div>
                        <div class="row">

                            @* <div class="col-md-10 "> *@
                            <div id="grid">
                            </div>
                            @*  </div> *@
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
