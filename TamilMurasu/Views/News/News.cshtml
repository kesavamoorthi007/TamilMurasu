@model TamilMurasu.Models.News 
@{
    ViewData["Title"] = "News";
}
<style>

    .mandatory {
        color: red;
        position: relative;
        top: 2px;
        left: 5px;
    }
</style>
<script type="text/javascript">
    @if (TempData["notice"] != null)
    {
        @:alert('@TempData["notice"]');
    }

</script>
<script src="/ckeditor/ckeditor.js" type="text/javascript"></script>

<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>News</a> </li>
            <li class="active"> <strong> Add News </strong> </li>
        </ol>
    </div>
</div>
<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                    <h5 style="font-size:14px">News</h5>
                    <hr>
                    @using (Html.BeginForm("News", "News", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <form>

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <br><label for="inputName3" class="col-sm-4 control-label">News Head<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.NewsHead, new { @id = "txtNewsHead", @class = "form-control", @TabIndex = 1 })
                                            @Html.HiddenFor(C => C.ID)
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <br /> <label for="inputName3" class="col-sm-4 control-label">Category<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">
                                            @Html.DropDownListFor(C => C.Category, Model.Categorylst, "--Please Select--", new { @id = "ddlCategory",@Class = "form-control _select", @TabIndex = 1 })
                                        </div>
                                    </div>
                                </div>
                            </div>
                           
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <br /><label for="checkbox" class="col-sm-4 control-label">Editor Pick<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">
                                            @Html.CheckBoxFor(C => C.Editor, new { @id = "Editor", @class = "form-control", @TabIndex = 1 })
                                        </div>
                                        <br /><label for="checkbox" class="col-sm-4 control-label">Highlights News<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">
                                            @Html.CheckBoxFor(C => C.Highlights, new { @id = "Highlights", @class = "form-control", @TabIndex = 1 })
                                        </div>
                                        <br /><label for="checkbox" class="col-sm-4 control-label">Banner News<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">
                                            @Html.CheckBoxFor(C => C.Banner, new { @id = "Banner", @class = "form-control", @TabIndex = 1 })
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <br /> <label for="checkbox" class="col-sm-2 control-label">News Detail<label class="mandatory">*</label></label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(C => C.NewsDetail, new { @id = "NewsDetail", @class = "form-control", @TabIndex = 1 })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <br /> <div class="form-group">
                                        <label for="formFile" class="col-sm-4 control-label">Picture Thumbnail<label class="mandatory">*</label></label>
                                        <div class="col-md-8">
                                        <input class="form-control" type="file" id="formFile">
                                     </div>
                                  </div>
                                </div>
                                <div class="col-md-6">
                                        <div class="form-group">
                                        <br /> <label for="formFile" class="col-sm-4 control-label">Picture Large<label class="mandatory">*</label></label>
                                         <div class="col-md-8">
                                          <input class="form-control" type="file" id="formFile">
                                        </div>
                                   </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <br /> <label for="datePicker" class="col-sm-4 control-label">Publish Up<label class="mandatory">*</label></label>
                                        <div class="input-group date form_date col-sm-8" data-date="" data-date-format="dd-M-yyyy">
                                            @Html.TextBoxFor(C => C.PublishUp, new { @id = "PublishUp", @class = "form-control", @TabIndex = 2, @size = "32", @readonly = true})
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span> <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <br /> <label for="inputName3" class="col-sm-4 control-label">Publish Down<label class="mandatory">*</label></label>
                                        <div class="input-group date to_date col-sm-8" data-date="" data-date-format="dd-M-yyyy">
                                            @Html.TextBoxFor(C => C.PublishDown, new { @id = "PublishDown", @class = "form-control", @TabIndex = 2, @size = "32", @readonly = true })
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span> <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <br /> <label for="checkbox" class="col-sm-4 control-label">KeyWords<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.KeyWords, new { @id = "txtKeyWords", @class = "form-control", @TabIndex = 1 })
                                       
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div style="height:30px;"></div>
                            <div class="col-lg-5"></div>
                            <div class="text-center">
                                <button type="submit" name="submit" class="btn btn-primary" id="btnSave" value="Save" tabindex="18">Save</button>
                                <button class="btn btn-warning" type="reset">Reset</button>
                                <a button class="btn btn-danger" type="submit" href="@Url.Action("ListNews", "News")">Cancel</a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
       $('._select').select2();
    });
    $(function () {
        CKEDITOR.replace('NewsDetail');
    });
</script>
<script>
    $('.to_date').datetimepicker({
        //   language:  'fr',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        endDate: new Date(),
        forceParse: 0

    });
    $('.form_date').datetimepicker({
        //   language:  'fr',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        endDate: new Date(),
        forceParse: 0
    }).on('changeDate', function (selected) {
        var minDate = new Date(selected.date.valueOf());
        $('.to_date').datetimepicker('setStartDate', minDate);

    });
</script>
