                isValid = false;
                $(txtNewsHead).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter  News Head");
                return false;
            }
            else {
                $(txtNewsHead).css({
                    "border": "",
                    "background": ""
                });
            }
            if (document.getElementById("ddlCategory").value == "") {
                isValid = false;
                $(ddlCategory).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Select Category");
                return false;
            }
            else {
                $(ddlCategory).css({
                    "border": "",
                    "background": ""
                });
            }
            // if (document.getElementById("Title_Eng").value == "") {
            //     isValid = false;
            //     $(Title_Eng).css({
            //         "border": "1px solid red",
            //         "background": "#FFCECE"
            //     });

            //     alert("Please Enter  Enter Title");
            //     return false;
            // }
            // else {
            //     $(Title_Eng).css({
            //         "border": "",
            //         "background": ""
            //     });
            // }
            if (isValid == false)
                e.preventDefault();
        });

    });
</script>